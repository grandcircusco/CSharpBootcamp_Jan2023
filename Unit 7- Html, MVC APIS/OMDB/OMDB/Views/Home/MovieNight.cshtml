@{
}


<form asp-method="post" asp-action="MovieNight">
    <p>Enter first movie</p>
    <input type="text" name="title1" />

    <p>Enter second movie</p>
    <input type="text" name="title2" />

    <p>Enter third movie</p>
    <input type="text" name="title3" />

    <input type="submit" />
</form>

@{
    if(Model != null){
        foreach(MovieModel m in Model){
            <div class="card" style="width: 18rem;">
                <h1 class="card-header">@m.Title</h1>
                <img src="@m.Poster" />
                <p class="card-footer">@m.Plot</p>
            </div>
        }
    }
}